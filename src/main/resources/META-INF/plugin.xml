<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.wei.wreader</id>
    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>W-Reader</name>
    <version>0.0.1</version>
    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="2668910548@qq.com" url="https://github.com/Wei-1021">2668910548</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
        <p>
        W-Reader是一款基于Intellij IDEA的轻量级小说阅读插件，为开发者提供了沉浸式阅读小说的体验。<br>
        </p>
        <p>
        功能特性：
        </p>
        <ul>
            <li>&nbsp;&nbsp;无缝阅读：直接在IDEA内阅读喜爱的小说，无需切换应用。</li>
        </ul>
    ]]></description>

    <change-notes><![CDATA[
    ]]></change-notes>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity id="com.wei.wreader.factory.StartupFactory"
                             implementation="com.wei.wreader.factory.StartupFactory"
                             order="first"/>
        <!--        <toolWindow id="WReader"-->
        <!--                    factoryClass="com.wei.wreader.factory.WReaderToolWindowFactory"-->
        <!--                    anchor="right"-->
        <!--                    canCloseContents="true"-->
        <!--                    icon="/icon/mainIcon.svg"/>-->
        <applicationService serviceImplementation="com.wei.wreader.service.CacheService"/>
        <applicationConfigurable parentId="tools"
                                 instance="com.wei.wreader.ui.WReaderSettingForm"
                                 id="com.wei.wreader.ui.WReaderSettingForm"
                                 displayName="W-Reader"/>
        <statusBarWidgetFactory id="WReaderStatusBar"
                                implementation="com.wei.wreader.factory.WReaderStatusBarFactory"
                                order="first"/>
    </extensions>

    <actions>
        <!-- Action -->
        <action id="WReaderSetting" class="com.wei.wreader.action.SettingAction" text="设置"
                icon="AllIcons.General.Settings">
        </action>
        <action id="SearchBookName" class="com.wei.wreader.action.SearchBookNameAction" text="搜索"
                icon="AllIcons.Actions.Search">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD7"/>
        </action>
        <action id="ChapterListAction" class="com.wei.wreader.action.ChapterListAction" text="目录"
                icon="com.intellij.icons.ExpUiIcons.FileTypes.ChangedFile">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD9"/>
        </action>
        <action id="PrevChapterAction" class="com.wei.wreader.action.PrevChapterAction" text="上一章"
                icon="AllIcons.Actions.Play_first">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD8"/>
        </action>
        <action id="NextChapterAction" class="com.wei.wreader.action.NextChapterAction" text="下一章"
                icon="AllIcons.Actions.Play_last">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD2"/>
        </action>
        <action id="PrevLineAction" class="com.wei.wreader.action.PrevLineAction" text="上一行"
                description="状态栏模式下切换至上一行文字"
                icon="com.intellij.icons.ExpUiIcons.General.MoveUp">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD4"/>
        </action>
        <action id="NextLineAction" class="com.wei.wreader.action.NextLineAction" text="下一行"
                icon="com.intellij.icons.ExpUiIcons.General.MoveDown"
                description="状态栏模式下切换至下一行文字">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD6"/>
        </action>
        <action id="FontSizeSubAction" class="com.wei.wreader.action.FontSizeSubAction" text="字体缩小"
                icon="/icon/font_sub.svg"/>
        <action id="FontSizeAddAction" class="com.wei.wreader.action.FontSizeAddAction" text="字体放大"
                icon="/icon/font_add.svg"/>
        <action id="ChangeFontColorAction" class="com.wei.wreader.action.ChangeFontColorAction" text="改变字体颜色"
                icon="com.intellij.icons.ExpUiIcons.Gutter.Colors"/>
        <action id="LoadLocalFileAction" class="com.wei.wreader.action.LoadLocalFileAction" text="加载本地文件"
                icon="AllIcons.Nodes.Folder"
                description="加载本地文件">
            <keyboard-shortcut keymap="$default" first-keystroke="alt ADD"/>
        </action>

        <!-- Group -->
        <group id="WReaderGroup" text="WReader" description="WReader" popup="true" icon="/icon/mainIcon.svg">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </group>
        <group id="remote">
            <reference id="WReaderSetting"/>
            <separator/>
            <reference id="SearchBookName"/>
            <reference id="ChapterListAction"/>
            <reference id="PrevChapterAction"/>
            <reference id="NextChapterAction"/>
            <add-to-group group-id="WReaderGroup"/>
            <separator/>
        </group>
        <group id="toolWindowBar">
            <reference id="SearchBookName"/>
            <reference id="FontSizeSubAction"/>
            <reference id="FontSizeAddAction"/>
            <reference id="ChapterListAction"/>
            <reference id="PrevChapterAction"/>
            <reference id="NextChapterAction"/>
            <reference id="ChangeFontColorAction"/>
        </group>
    </actions>
</idea-plugin>