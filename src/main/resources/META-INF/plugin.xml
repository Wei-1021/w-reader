    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.json</depends>
<!--    <depends>com.intellij.platform.jcef</depends>-->

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity id="wreader.StartupFactory"
                             implementation="com.wei.wreader.factory.StartupFactory"
                             order="first"/>
        <applicationService serviceImplementation="com.wei.wreader.service.CacheService"/>
        <applicationService serviceImplementation="com.wei.wreader.service.CustomSiteRuleCacheServer"/>
        <applicationConfigurable parentId="tools"
                                 instance="com.wei.wreader.ui.WReaderSettingForm"
                                 id="wreader.WReaderSettingForm"
                                 displayName="W-Reader"/>
        <statusBarWidgetFactory id="wreader.WReaderStatusBar"
                                implementation="com.wei.wreader.factory.WReaderStatusBarFactory"
                                order="first"/>
    </extensions>

    <extensionPoints>

    </extensionPoints>

    <actions>
        <!--region Action-->
        <action id="wreader.WReaderSetting" class="com.wei.wreader.action.SettingAction" text="设置"
                icon="AllIcons.General.Settings">
        </action>
        <action id="wreader.SearchBookName" class="com.wei.wreader.action.SearchBookNameAction" text="搜索"
                icon="AllIcons.Actions.Search">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD7"/>
        </action>
        <action id="wreader.ChapterListAction" class="com.wei.wreader.action.ChapterListAction" text="目录"
                icon="AllIcons.General.InlineVariablesHover">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD9"/>
        </action>
        <action id="wreader.PrevChapterAction" class="com.wei.wreader.action.PrevChapterAction" text="上一章"
                icon="AllIcons.Actions.Play_first">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD4"/>
        </action>
        <action id="wreader.NextChapterAction" class="com.wei.wreader.action.NextChapterAction" text="下一章"
                icon="AllIcons.Actions.Play_last">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD6"/>
        </action>
        <action id="wreader.PrevLineAction" class="com.wei.wreader.action.PrevLineAction" text="上一行"
                description="状态栏模式下切换至上一行文字"
                icon="AllIcons.Actions.MoveUp">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD8"/>
        </action>
        <action id="wreader.NextLineAction" class="com.wei.wreader.action.NextLineAction" text="下一行"
                icon="AllIcons.Actions.MoveDown"
                description="状态栏模式下切换至下一行文字">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD2"/>
        </action>
        <action id="wreader.FontSizeSubAction" class="com.wei.wreader.action.FontSizeSubAction" text="字体缩小"
                icon="com.wei.wreader.utils.WReaderIcons.FONT_SIZE_SUB"/>
        <action id="wreader.FontSizeAddAction" class="com.wei.wreader.action.FontSizeAddAction" text="字体放大"
                icon="com.wei.wreader.utils.WReaderIcons.FONT_SIZE_ADD"/>
        <action id="wreader.ChangeFontColorAction" class="com.wei.wreader.action.ChangeFontColorAction"
                text="改变字体颜色"
                icon="AllIcons.Actions.Colors"/>
        <action id="wreader.LoadLocalFileAction" class="com.wei.wreader.action.LoadLocalFileAction" text="加载本地文件"
                icon="AllIcons.Nodes.Folder">
            <keyboard-shortcut keymap="$default" first-keystroke="alt ADD"/>
        </action>
        <action id="wreader.EditorMessageAction" class="com.wei.wreader.action.EditorMessageAction"
                text="编辑器提示消息"
                icon="AllIcons.General.Balloon">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD0"/>
        </action>
        <action id="wreader.CommentBlockAction" class="com.wei.wreader.action.CommentBlockAction" text="代码注释块"
                icon="AllIcons.Actions.InlayRenameInComments">
            <keyboard-shortcut keymap="$default" first-keystroke="alt DIVIDE"/>
        </action>
        <action id="wreader.HelpAction" class="com.wei.wreader.action.HelpAction" text="帮助"
                icon="AllIcons.Actions.Help"/>
        <action id="wreader.HideTextAction" class="com.wei.wreader.action.HideOrShowTextAction" text="隐藏/显示文字"
                icon="AllIcons.General.InspectionsEye">
            <keyboard-shortcut keymap="$default" first-keystroke="alt SUBTRACT"/>
        </action>
        <action id="wreader.AutoReadAction"
                class="com.wei.wreader.action.AutoReadAction"
                text="自动阅读"
                icon="com.wei.wreader.utils.WReaderIcons.AUTO_READ_PLAY"/>
        <action id="wreader.AudioReadingAction"
                class="com.wei.wreader.action.AudioReadingAction"
                text="听书"
                icon="com.wei.wreader.utils.WReaderIcons.LISTEN_BOOK">
            <keyboard-shortcut keymap="$default" first-keystroke="alt NUMPAD3"/>
        </action>
        <action id="wreader.ShowBookInfoAction"
                class="com.wei.wreader.action.ShowBookInfoAction"
                text="书籍信息"
                icon="com.wei.wreader.utils.WReaderIcons.BOOK_INFO">
        </action>
        <action id="wreader.CustomSiteRuleAction" class="com.wei.wreader.action.CustomSiteRuleAction"
                text="自定义书源规则(Beta)"
                icon="com.wei.wreader.utils.WReaderIcons.CUSTOM_SITE">
            <keyboard-shortcut keymap="$default" first-keystroke="alt DECIMAL"/>
        </action>
        <!--endregion-->

        <!--region Group-->
        <!-- Tool菜单 -->
        <group id="wreader.group.WReader" text="WReader" description="WReader" popup="true" icon="/icon/mainIcon.svg">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </group>
        <!-- 编辑器右键 -->
        <group id="wreader.group.editorPopupMenu" text="WReader" description="WReader" popup="true"
               icon="/icon/mainIcon.svg">
            <reference id="wreader.EditorMessageAction"/>
            <reference id="wreader.CommentBlockAction"/>
            <reference id="wreader.AudioReadingAction"/>
            <separator/>
            <reference id="wreader.FontSizeSubAction"/>
            <reference id="wreader.FontSizeAddAction"/>
            <reference id="wreader.PrevChapterAction"/>
            <reference id="wreader.NextChapterAction"/>
            <separator/>
            <reference id="wreader.ChangeFontColorAction"/>
            <reference id="wreader.LoadLocalFileAction"/>
            <reference id="wreader.WReaderSetting"/>
            <reference id="wreader.CustomSiteRuleAction"/>
            <reference id="wreader.HelpAction"/>
            <reference id="wreader.ShowBookInfoAction"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </group>
        <!-- Tool菜单分组 -->
        <group id="wreader.group.toolMenu">
            <reference id="wreader.WReaderSetting"/>
            <reference id="wreader.HelpAction"/>
            <reference id="wreader.ShowBookInfoAction"/>
            <reference id="wreader.CustomSiteRuleAction"/>
            <separator/>
            <reference id="wreader.LoadLocalFileAction"/>
            <reference id="wreader.EditorMessageAction"/>
            <reference id="wreader.CommentBlockAction"/>
            <reference id="wreader.AudioReadingAction"/>
            <separator/>
            <reference id="wreader.SearchBookName"/>
            <reference id="wreader.ChapterListAction"/>
            <reference id="wreader.PrevChapterAction"/>
            <reference id="wreader.NextChapterAction"/>
            <add-to-group group-id="wreader.group.WReader"/>
            <separator/>
        </group>
        <!-- 工具窗口ToolBar -->
        <group id="wreader.group.toolWindowBar">
            <reference id="wreader.SearchBookName"/>
            <reference id="wreader.ChapterListAction"/>
            <reference id="wreader.AudioReadingAction"/>
            <separator/>
            <reference id="wreader.FontSizeSubAction"/>
            <reference id="wreader.FontSizeAddAction"/>
            <reference id="wreader.PrevChapterAction"/>
            <reference id="wreader.NextChapterAction"/>
            <separator/>
            <reference id="wreader.ChangeFontColorAction"/>
            <reference id="wreader.LoadLocalFileAction"/>
            <reference id="wreader.WReaderSetting"/>
            <reference id="wreader.CustomSiteRuleAction"/>
            <reference id="wreader.HelpAction"/>
            <reference id="wreader.ShowBookInfoAction"/>
        </group>
        <!-- 状态栏 -->
        <group id="wreader.group.statusBar">
            <reference id="wreader.WReaderSetting"/>
            <reference id="wreader.CustomSiteRuleAction"/>
            <reference id="wreader.HelpAction"/>
            <reference id="wreader.ShowBookInfoAction"/>
            <separator/>
            <reference id="wreader.SearchBookName"/>
            <reference id="wreader.LoadLocalFileAction"/>
            <reference id="wreader.ChapterListAction"/>
            <reference id="wreader.HideTextAction"/>
            <reference id="wreader.AutoReadAction"/>
            <reference id="wreader.AudioReadingAction"/>
            <separator/>
            <reference id="wreader.PrevChapterAction"/>
            <reference id="wreader.NextChapterAction"/>
            <reference id="wreader.PrevLineAction"/>
            <reference id="wreader.NextLineAction"/>
        </group>
        <!--endregion-->
    </actions>
</idea-plugin>
